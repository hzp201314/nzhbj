<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <ImageView
        android:id="@+id/item_iv_icon"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/news_pic_default"
        android:background="#000000"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:layout_marginRight="8dp"/>
    <!-- fitXY : 拉伸图片，填充满整个imageView -->
    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一打算健康时刻提防开始的空间可是对方是到家发个说的分公司广东省佛山地方是的水电费库"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/item_iv_icon"
        android:maxLines="2"/>
    <!-- maxLines : 设置textview的最大行数 -->
    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-06-23 10:08:57"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@id/item_iv_icon"
        android:layout_below="@+id/item_tv_title"
        android:layout_marginTop="8dp"/>
</RelativeLayout>